<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacqu.pronostics.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/foot"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="287dp"
        android:layout_height="82dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nom de Compte"
        android:textColorHint="#fff"
        android:background="@drawable/background_text"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintHorizontal_bias="0.506" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="271dp"
        android:layout_height="86dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Mot de passe"
        android:textColorHint="#fff"
        android:background="@drawable/background_text"
        android:inputType="textPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/angry_btn"
        app:layout_constraintHorizontal_bias="0.505" />

    <Button
        android:id="@+id/angry_btn"

        android:text="S'inscrire"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_sinscrire"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="121dp" />

    <Button
        android:id="@+id/angry_btn2"

        android:text="Se connecter"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_sinscrire"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="44dp" />
</android.support.constraint.ConstraintLayout>
